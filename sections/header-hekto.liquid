{% style %}
  .header__wrap1{
    background-color: #ccc ;
  }
  .header__wrap{
    background-color: {{ section.settings.color }}   ;
  }
{% endstyle %}
  {% liquid
    assign pageType = request.page_type
    assign pageHandle = page.handle
    assign pageBgc = section.settings.bgc
  %}  
<div class=" header__wrap1 bgcHeader {% if pageBgc contains pageType or pageBgc contains pageHandle %} header__wrap {% endif %}">
  <div class="header container__large df">
    <div class="header__logo">
      <a href="{{ routes.root_url }}">Hekto</a>
      {{ page.handle }}
    </div>
    <div class="header__menu">
      <ul class="header__list df ">
        {% for link in section.settings.menu.links %}
        <li class="header__item df df__center ">

          <a href="{{ link.url }}" class="header__link header__link--active text__navbar">
            {{ link.title }}
          </a>
 
        </li>
        {% endfor %}
      </ul>
    </div>
    <div class="header__input df" style="width: 100%">
      <input type="text">
      <div class="header__input-icon df">
        <img src="https://hichaocau.github.io/Figma_Hekto/assets/imgs/search.svg" alt="">
      </div>
    </div>
  </div>
</div>


{% schema %}
{
  "name": "Header",
  "settings":[
    {
      "type": "link_list",
      "id": "menu",
      "default": "main-menu",
      "label": "Menu"
    },
    {
      "type": "color",
      "id": "color",
      "label": "Change color"
    },
    {
      "type": "html",
      "id": "bgc",
      "label": "type page"
    }
  ],
  "presets": [
    {
      "name": "header"
    }
  ]
}
{% endschema %}